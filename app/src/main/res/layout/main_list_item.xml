<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ml_img_title"
        android:layout_width="118dp"
        android:layout_height="100dp"
        android:layout_weight="1" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="4">

        <TextView
            android:id="@+id/ml_name"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="이름"
            android:textColor="#000000"
            android:textSize="24dp"
            app:layout_constraintStart_toStartOf="@+id/ml_txt_subtitle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ml_age"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="나이"
            android:textColor="#000000"
            android:textSize="24dp"
            app:layout_constraintStart_toEndOf="@+id/ml_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ml_sexual"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="성별"
            android:textColor="#000000"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ml_age"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ml_txt_subtitle"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="중성화 수술 여부"
            android:textColor="#666666"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>